{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": ["**/dist/*"],
    "overrides": [
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "root": true,
    "rules": {
        "no-unused-vars": ["warn"],
        "semi": ["warn", "always"],
        "quotes": ["warn", "single"],
        "curly": ["warn", "multi-line"],
        "no-empty": "warn",
        "no-return-assign": "warn",
        "prefer-const": "warn",
        "indent": ["warn", 2],
        "max-len": ["warn", { "code": 120 }],
        "no-multiple-empty-lines": ["warn", { "max": 1, "maxEOF": 1 }],
        "object-curly-spacing": ["warn", "always"]
    }
}
